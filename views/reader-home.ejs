<!doctype html>
<html>
<head>
        <meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Reader Home Page</title>
		<link rel="stylesheet" href="/main.css">
          <style>
        .articles ul {
            list-style-type: none; /* Remove default list style */
            padding: 0; /* Remove default padding */
        }
        .article {
            border: 1px solid #ccc;
            border-radius: 5px;
            margin: 10px 0;
            padding: 15px;
            background-color: #f9f9f9;
            transition: background-color 0.3s ease;
        }
        .article:hover {
            background-color: #e0e0e0;
        }
        .article a {
            text-decoration: none;
            color: inherit; /* Inherit color to make the entire list item clickable */
            display: block; /* Make anchor fill the list item */
        }
    </style>
</head>
<body>
        <section class="app">
			<nav class="nav">
				<ul>
                    <li class="settings"><a href="/author/settings">settings</a></li>
					<li class="user"><%= user.username %></li>
					<li>
						<form action="/users/logout" method="post">
							<button class="logout" type="submit">Sign out</button>
						</form>
					</li>
				</ul>
			</nav>
			<header class="header">
				<h1>Reader Home Page</h1>
                <h2><%= title%></h2>
                <h3><%= subtitle%></h2>
                <h5>by <%= author%></h3>
			</header>
            <section class="main">
                <p>This is the reader home page</p>
                <section class="articles">
                    <h2>Published Aritcles</h2>
                    <ul>
                        <% articles.forEach(article => { %>
                        <li class="article">
                            <a href="/reader/article/view/<%= article.id %>">
                                <h2><%= article.title %></h2>
                                <h3><%= article.subtitle %></h3>
                                <p>Author: <%= article.author_name %></p>
                                <p>Published: <%= new Date(article.published_at).toLocaleDateString() %></p>
                                <p>Reads: <%= article.reads %></p>
                                <p>Likes: <%= article.likes %></p>
                            </a>
                        </li>
                        <% }); %>
                    </ul>
            </section>
		<footer class="info">
			<p>Authentication powered by <a href="https://www.passportjs.org">Passport</a></p>
		</footer>
</body>
</html>
